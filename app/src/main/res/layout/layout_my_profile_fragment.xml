<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_fragment"
        android:orientation="vertical"
        android:padding="@dimen/dp_4">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_fragment"
            card_view:cardCornerRadius="@dimen/dp_2"
            card_view:cardElevation="@dimen/dp_3"
            card_view:cardPreventCornerOverlap="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_8"
                >

                <RelativeLayout
                    android:id="@+id/layoutHoldsCard1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite">

                    <com.pachouri.transportsolution.widgets.AppTextView
                        android:id="@+id/textViewEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:padding="@dimen/dp_4"
                        android:text="ANkit"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_14"
                        app:textStyle="@integer/regular"/>

                    <com.pachouri.transportsolution.widgets.AppTextView
                        android:id="@+id/textViewPhoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewEmail"
                        android:maxLines="1"
                        android:padding="@dimen/dp_4"
                        android:text="ANkit"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_14"
                        app:textStyle="@integer/regular"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layoutUserDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutHoldsCard1"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_8">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_separator"
                        />

                    <com.pachouri.transportsolution.widgets.AppTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:maxLines="1"
                        android:padding="@dimen/dp_4"
                        android:text="Personal Information"
                        android:textColor="@color/snackBarColor"
                        android:textSize="@dimen/sp_14"
                        app:textStyle="@integer/regular"/>

                    <ImageView
                        android:id="@+id/imageViewUser"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp_8"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_call"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_4"
                        >

                        <com.pachouri.transportsolution.widgets.AppTextView
                            android:id="@+id/textViewFirstName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:padding="@dimen/dp_4"
                            android:text="ANkit"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_14"
                            app:textStyle="@integer/regular"/>

                        <com.pachouri.transportsolution.widgets.AppTextView
                            android:id="@+id/textViewLastName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:padding="@dimen/dp_4"
                            android:text="ANkit"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_14"
                            app:textStyle="@integer/regular"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutUserDetails"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_8"
                    >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/line_separator"
                        />

                    <com.pachouri.transportsolution.widgets.AppTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:maxLines="1"
                        android:padding="@dimen/dp_4"
                        android:text="Government Identities"
                        android:textColor="@color/snackBarColor"
                        android:textSize="@dimen/sp_14"
                        app:textStyle="@integer/regular"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_4"
                        >

                        <com.pachouri.transportsolution.widgets.AppTextView
                            android:id="@+id/textViewAadhar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:padding="@dimen/dp_4"
                            android:text="ANkit"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_14"
                            app:textStyle="@integer/regular"/>

                        <com.pachouri.transportsolution.widgets.AppTextView
                            android:id="@+id/textViewVehicleRC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:padding="@dimen/dp_4"
                            android:text="ANkit"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/sp_14"
                            app:textStyle="@integer/regular"/>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>