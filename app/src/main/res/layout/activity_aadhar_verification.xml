<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_aadhar_verification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pachouri.transportsolution.activity.AadharVerification">

    <include
        layout="@layout/layout_main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_centerInParent="true">

         <com.pachouri.transportsolution.widgets.AppEditText
             android:id="@+id/edt_aadhar_number"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:layout_gravity="center"
             android:layout_marginLeft="40dp"
             android:textSize="16sp"
             android:layout_marginRight="40dp"
             android:hint="Aadhar Number"
             android:background="@drawable/background_edittext"
             android:lines="1"
             android:inputType="number"
             android:gravity="center"
             android:layout_marginBottom="40dp"
             app:textStyle="@integer/regular"
             />

         <com.pachouri.transportsolution.widgets.AppButton
             android:id="@+id/btn_verify"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:textColor="@drawable/text_color_black_white"
             android:text="Verify"
             android:layout_marginTop="16dp"
             android:layout_marginLeft="40dp"
             android:layout_marginRight="40dp"
             android:textSize="14sp"
             android:background="@drawable/selector_gray_white"
             />

     </LinearLayout>

    </RelativeLayout>

</LinearLayout>
