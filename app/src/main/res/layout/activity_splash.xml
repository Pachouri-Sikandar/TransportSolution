<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <com.pachouri.transportsolution.widgets.AppTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="28dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/splash_title"
        app:textStyle="@integer/semi_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        
        <com.pachouri.transportsolution.widgets.AppEditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_edittext"
            android:hint="Mobile Number"
            android:layout_marginLeft="20dp"
            android:paddingLeft="16dp"
            android:textSize="16sp"
            android:layout_marginRight="20dp"
            app:textStyle="@integer/regular"
            />

        <com.pachouri.transportsolution.widgets.AppButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@drawable/text_color_black_white"
            android:text="Login"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="14sp"
            android:background="@drawable/background_button"
            />

    </LinearLayout>


</RelativeLayout>