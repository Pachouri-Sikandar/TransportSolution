<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <com.pachouri.transportsolution.widgets.AppTextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="28dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/splash_title"
        app:textStyle="@integer/bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        
        <com.pachouri.transportsolution.widgets.AppTextView
            android:id="@+id/txt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:textSize="16sp"
            android:layout_marginRight="40dp"
            android:text="A Place Where people look for goods to transfer"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            app:textStyle="@integer/regular"
            />

        <com.pachouri.transportsolution.widgets.AppButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@drawable/text_color_black_white"
            android:text="Login"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textSize="14sp"
            android:background="@drawable/background_button"
            />


        <com.pachouri.transportsolution.widgets.AppTextView
            android:id="@+id/txt_login_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:textSize="16sp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="12dp"
            android:text="Login using mobile number"
            android:gravity="center"
            app:textStyle="@integer/regular"
            />

    </LinearLayout>


</RelativeLayout>