<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_first_name"
        android:layout_width="match_parent"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <com.pachouri.transportsolution.widgets.AppEditText
            android:id="@+id/edt_first_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="@string/first_name"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUV WXYZ"
            android:inputType="textCapWords"
            android:imeOptions="actionNext"
            app:textStyle="@integer/regular"
            android:padding="16dp"
            />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_last_name"
        android:layout_width="match_parent"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_height="wrap_content">

        <com.pachouri.transportsolution.widgets.AppEditText
            android:id="@+id/edt_last_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="@string/last_name"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUV WXYZ"
            android:inputType="textCapWords"
            android:imeOptions="actionNext"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            app:textStyle="@integer/regular" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_email"
        android:layout_width="match_parent"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_height="wrap_content">

        <com.pachouri.transportsolution.widgets.AppEditText
            android:id="@+id/edt_email"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="@string/email"
            android:inputType="textCapWords"
            android:imeOptions="actionNext"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            app:textStyle="@integer/regular" />

    </android.support.design.widget.TextInputLayout>


</LinearLayout>
