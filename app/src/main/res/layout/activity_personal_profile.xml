<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pachouri.transportsolution.activity.PersonalProfile">

    <include
        layout="@layout/layout_main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_user_profile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/default_user_icon"
                    android:layout_marginBottom="30dp"
                    android:layout_gravity="center_horizontal" />

                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/user_components"
                    />


            </LinearLayout>



        </ScrollView>

        <com.pachouri.transportsolution.widgets.AppButton
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@drawable/text_color_black_white"
            android:text="Save"
            android:layout_alignParentBottom="true"
            android:textSize="14sp"
            android:background="@drawable/selector_gray_white"
            />



    </RelativeLayout>


</LinearLayout>
